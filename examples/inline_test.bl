@prelude(core)

// Inline test demonstration

// Top-level test (not attached to a function)
test "math sanity" = 1 + 1 == 2

add : (Int, Int) -> Int
add = |a, b| a + b
  where
    test "adds positive numbers" = add(1, 2) == 3
    test "handles zero" = add(0, 5) == 5

double : Int -> Int
double = |x| x * 2
  where
    test "doubles positive" = double(3) == 6
    test "doubles zero" = double(0) == 0
