type Color = | Red | Green | Blue

type Option = | Some(Int) | None

type Result = | Ok(Int) | Err(String)

// Nullary constructor as expression
fn get_color() -> Color = Red

// Constructor with payload
fn wrap(x: Int) -> Option = Some(x)

// Match on sum type with constructor patterns
fn describe_color(c: Color) -> String = {
  match c
    Red -> "red"
    Green -> "green"
    Blue -> "blue"
}

fn unwrap_or(opt: Option, default: Int) -> Int = {
  match opt
    Some(v) -> v
    None -> default
}
