type Color = | Red | Green | Blue

type Option = | Some(Int) | None

type Result = | Ok(Int) | Err(String)

// Nullary constructor as expression
get_color : () -> Color
get_color = Red

// Constructor with payload
wrap : Int -> Option
wrap = |x| Some(x)

// Match on sum type with constructor patterns
describe_color : Color -> String
describe_color = |c| {
  match c
    Red -> "red"
    Green -> "green"
    Blue -> "blue"
}

unwrap_or : (Option, Int) -> Int
unwrap_or = |opt, default| {
  match opt
    Some(v) -> v
    None -> default
}
