@prelude(core)

// Negative test: record update errors
// Expected errors: TYP_027, TYP_028, TYP_029

type Point = { x: Int, y: Int }

// TYP_027: record update on non-record
fn bad_update_base(x: Int) -> Int = {
  let r = { ..x, y: 1 }
  0
}

// TYP_029: field not found in record update
fn bad_update_field(p: Point) -> Point = { ..p, z: 3 }

// TYP_028: type mismatch in record update
fn bad_update_type(p: Point) -> Point = { ..p, x: "hello" }
