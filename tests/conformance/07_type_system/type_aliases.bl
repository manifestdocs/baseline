@prelude(core)

// Conformance: type aliases and struct types

type Age = Int

type Pair = { first: Int, second: Int }

fn make_pair(a: Int, b: Int) -> Pair = Pair { first: a, second: b }

fn sum_pair(p: Pair) -> Int = p.first + p.second

test "struct alias" = {
  let p = make_pair(3, 7)
  sum_pair(p) == 10
}

test "direct struct creation" = {
  let p = Pair { first: 1, second: 2 }
  p.first + p.second == 3
}
