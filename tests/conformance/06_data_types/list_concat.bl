@prelude(core)

// Conformance: ++ list concatenation operator (using test statements)

test "basic concat" = [1, 2] ++ [3, 4] == [1, 2, 3, 4]
test "empty left" = {
  let r: List<Int> = []
  r ++ [1, 2] == [1, 2]
}
test "empty right" = {
  let r: List<Int> = []
  [1, 2] ++ r == [1, 2]
}
test "empty both" = {
  let a: List<Int> = []
  let b: List<Int> = []
  a ++ b == []
}
test "string lists" = ["a", "b"] ++ ["c"] == ["a", "b", "c"]
test "chained" = [1] ++ [2] ++ [3] == [1, 2, 3]
test "preserves order" = {
  let result = [3, 1] ++ [4, 2]
  List.fold(result, "", |acc, x| "${acc}${x}") == "3142"
}
