{
  "comments": {
    "lineComment": "//",
    "blockComment": ["/*", "*/"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "/*", "close": "*/", "notIn": ["string"] }
  ],
  "surroundingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"" },
    { "open": "|", "close": "|" }
  ],
  "folding": {
    "markers": {
      "start": "^\\s*\\{",
      "end": "^\\s*\\}"
    }
  },
  "indentationRules": {
    "increaseIndentPattern": "^.*\\{[^}]*$|^.*\\([^)]*$|^.*\\[[^\\]]*$|^\\s*(describe|context|it|match|if|for|where|handle)\\b",
    "decreaseIndentPattern": "^\\s*[}\\])]"
  },
  "wordPattern": "[a-zA-Z_][a-zA-Z0-9_]*!?",
  "onEnterRules": [
    {
      "beforeText": "^\\s*///.*$",
      "action": { "indent": "none", "appendText": "/// " }
    },
    {
      "beforeText": "^\\s*//.*$",
      "action": { "indent": "none", "appendText": "// " }
    }
  ]
}
